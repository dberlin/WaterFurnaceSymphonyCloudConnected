<?xml version="1.0" encoding="UTF-8"?>

<uidefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="https://prd-use-rad-assets.azurewebsites.net/ExtensionsSchemaDefinition.xsd">
    <version ver="2.0"/>
    <tile icon="{ConnectionStateIcon}" navigation="show:MainPage" showinhomepage="#true"
          showinroompage="#true"/>
    <layouts>
        <layout id="MainPage" isdefaultlayout="#true">
            <controls>

                <thermostat id="Thermostat" toplefticon="#icClimateRegular" title="^ThermostatTitle"
                            heatmodeenabled="{ThermostatHeatModeEnabled}"
                            coolmodeenabled="{ThermostatCoolModeEnabled}"
                            automodeenabled="{ThermostatAutoModeEnabled}"
                            temperatureunits="{ThermostatUnits}" modeicon="{ThermostatModeIcon}"
                            currenttemperaturelabel="{ThermostatCurrentTempLabel}"
                            currenttemperature="{ThermostatCurrentTemperature}"
                            setpointheat="{ThermostatHeatSetPoint}"
                            setpointcool="{ThermostatCoolSetPoint}"
                            setpointauto="{ThermostatAutoSetPoint}"/>
                <subheader id="StatusHeader" label="^EquipmentStatusLabel"/>
                <controlgroup>
                    <textdisplay id="WaterTempDisplay" title="^WaterTempTitle" line1label="{WaterTempLabel}"/>
                    <textdisplay id="ReturnAirTempDisplay" title="^ReturnAirTempTitle"
                                 line1label="{ReturnAirTempLabel}"/>
                    <textdisplay id="TotalPowerUsage" title="^TotalPowerUsageTitle"
                                 line1label="{TotalPowerUsageLabel}"/>
                    <textdisplay id="CompressorPowerUsage" title="^CompressorPowerUsageTitle"
                                 line1label="{CompressorPowerUsageLabel}"/>
                    <textdisplay id="FanPowerUsage" title="^FanPowerUsageTitle" line1label="{FanPowerUsageLabel}"/>
                    <textdisplay id="PumpPowerUsage" title="^PumpPowerUsageTitle"
                                 line1label="{PumpPowerUsageLabel}"/>
                    <textdisplay id="AuxHeatPowerUsage" title="^AuxHeatPowerUsageTitle"
                                 line1label="{AuxHeatPowerUsageLabel}"/>
                </controlgroup>
            </controls>
        </layout>
    </layouts>
    <alerts/>
</uidefinition>